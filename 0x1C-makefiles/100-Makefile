# Compiler and Flags
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

# File Lists
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

# Commands
RM = rm -f

.PHONY: all clean fclean re

all: $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	$(RM) *~ $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

# Dependencies
$(OBJ): m.h

oclean: # Custom rule to delete object files
    $(RM) $(OBJ)
