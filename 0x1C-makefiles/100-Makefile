CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(OBJ): m.h

NAME = holberton
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
